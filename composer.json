{
    "name": "php-http-framework/example",
    "description": "example http-framework",
    "authors": [
        {
            "name": "sergei",
            "email": "sergiodrovski@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "App\\": "src/App/",
            "Framework\\": "src/Framework/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\": "tests/App/",
            "Framework\\": "tests/Framework/"
        }
    },
    "require": {
        "php": "^8.0",
        "psr/http-message": "^1.0",
        "laminas/laminas-diactoros": "^2.8",
        "laminas/laminas-httphandlerrunner": "^2.1",
        "aura/router": "^3.2",
        "psr/http-server-handler": "^1.0",
        "psr/http-server-middleware": "^1.0",
      "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "scripts": {
        "test": "phpunit --colors=always"
    }
}
